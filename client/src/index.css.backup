@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  /* Base Deep Sky Blue Foundation */
  --background: hsl(220, 85%, 4%);
  --foreground: hsl(195, 100%, 92%);
  --muted: hsl(215, 40%, 8%);
  --muted-foreground: hsl(200, 60%, 75%);
  --popover: hsl(218, 50%, 6%);
  --popover-foreground: hsl(195, 100%, 90%);
  --card: hsl(216, 45%, 7%);
  --card-foreground: hsl(195, 100%, 88%);
  --border: hsl(212, 35%, 15%);
  --input: hsl(214, 40%, 10%);
  --primary: hsl(190, 100%, 65%);
  --primary-foreground: hsl(220, 85%, 4%);
  --secondary: hsl(210, 60%, 20%);
  --secondary-foreground: hsl(195, 100%, 90%);
  --accent: hsl(200, 100%, 70%);
  --accent-foreground: hsl(220, 85%, 4%);
  --destructive: hsl(340, 85%, 65%);
  --destructive-foreground: hsl(195, 100%, 95%);
  --ring: hsl(190, 100%, 65%);
  --radius: 1rem;
  
  /* Prismatic Blue Foundation */
  --prismatic-deep: hsl(220, 90%, 8%);
  --prismatic-mid: hsl(215, 85%, 15%);
  --prismatic-bright: hsl(200, 100%, 65%);
  --prismatic-cyan: hsl(190, 100%, 70%);
  --prismatic-sky: hsl(200, 100%, 75%);
  
  /* Prismatic Spectrum Refractions */
  --spectrum-violet: hsl(260, 100%, 70%);
  --spectrum-indigo: hsl(240, 100%, 70%);
  --spectrum-blue: hsl(210, 100%, 70%);
  --spectrum-cyan: hsl(190, 100%, 70%);
  --spectrum-teal: hsl(170, 100%, 70%);
  --spectrum-green: hsl(150, 80%, 65%);
  --spectrum-yellow: hsl(50, 100%, 70%);
  --spectrum-orange: hsl(25, 100%, 70%);
  --spectrum-red: hsl(350, 90%, 70%);
  --spectrum-pink: hsl(320, 100%, 75%);
  --spectrum-white: hsl(200, 100%, 95%);
  
  /* Deep Space Blues - Unified Background System */
  --space-black: hsl(220, 100%, 2%);
  --space-void: hsl(218, 85%, 5%);
  --space-deep: hsl(215, 75%, 10%);
  --space-mid: hsl(210, 65%, 18%);
  --space-nebula: hsl(205, 55%, 25%);
  
  /* Glass Prismatic Effects - Unified Glass System */
  --glass-primary: hsla(200, 100%, 65%, 0.15);
  --glass-secondary: hsla(190, 100%, 70%, 0.1);
  --glass-border: hsla(200, 100%, 70%, 0.3);
  --glass-highlight: hsla(200, 100%, 85%, 0.2);
  
  /* Synthwave Color Variables - Values Page Compatibility */
  --synthwave-cyan: hsl(190, 100%, 70%);
  --synthwave-pink: hsl(320, 100%, 75%);
  --synthwave-gold: hsl(50, 100%, 70%);
  --bright-blue: hsl(200, 100%, 75%);
  --light-beam: hsl(200, 100%, 85%);
}

.dark {
  --background: hsl(240, 25%, 4%);
  --foreground: hsl(0, 0%, 98%);
  --muted: hsl(240, 10%, 15%);
  --muted-foreground: hsl(240, 5%, 65%);
  --popover: hsl(240, 25%, 4%);
  --popover-foreground: hsl(0, 0%, 98%);
  --card: hsl(240, 25%, 4%);
  --card-foreground: hsl(0, 0%, 98%);
  --border: hsl(240, 15%, 20%);
  --input: hsl(240, 15%, 20%);
  --primary: hsl(207, 90%, 54%);
  --primary-foreground: hsl(211, 100%, 99%);
  --secondary: hsl(240, 10%, 15%);
  --secondary-foreground: hsl(0, 0%, 98%);
  --accent: hsl(240, 10%, 15%);
  --accent-foreground: hsl(0, 0%, 98%);
  --destructive: hsl(0, 62.8%, 30.6%);
  --destructive-foreground: hsl(0, 0%, 98%);
  --ring: hsl(240, 4.9%, 83.9%);
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply font-sans antialiased bg-background text-foreground;
    font-family: 'Inter', sans-serif;
    background: linear-gradient(135deg, 
      var(--space-void) 0%, 
      var(--space-deep) 25%, 
      var(--space-mid) 50%, 
      var(--space-deep) 75%, 
      var(--space-void) 100%);
    overflow-x: hidden;
    min-height: 100vh;
  }
  
  html {
    scroll-behavior: smooth;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Space Grotesk', sans-serif;
  }
  
  code, pre {
    font-family: 'JetBrains Mono', monospace;
  }
}

@layer components {
  /* Unified Prismatic Glass System */
  .prismatic-glass {
    backdrop-filter: blur(24px) saturate(180%);
    background: linear-gradient(135deg,
      var(--glass-primary) 0%,
      var(--glass-secondary) 50%,
      var(--glass-primary) 100%);
    border: 1px solid var(--glass-border);
    box-shadow: 
      0 12px 40px hsla(220, 100%, 4%, 0.4),
      0 4px 16px hsla(200, 100%, 65%, 0.1),
      inset 0 1px 0 var(--glass-highlight),
      inset 0 -1px 0 hsla(200, 100%, 85%, 0.05);
    position: relative;
    overflow: hidden;
  }
  
  .prismatic-glass::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg,
      transparent 0%,
      var(--spectrum-cyan) 20%,
      var(--spectrum-blue) 40%,
      var(--spectrum-violet) 60%,
      var(--spectrum-pink) 80%,
      transparent 100%);
    opacity: 0.1;
    animation: prism-refraction 8s ease-in-out infinite;
  }
  
  @keyframes prism-refraction {
    0% { left: -100%; opacity: 0; }
    50% { left: 100%; opacity: 0.15; }
    100% { left: 200%; opacity: 0; }
  }

  /* Unified Glass Morphism System */
  .glass-morphism {
    backdrop-filter: blur(16px) saturate(180%);
    background: linear-gradient(135deg,
      hsla(200, 100%, 65%, 0.12) 0%,
      hsla(190, 100%, 70%, 0.08) 50%,
      hsla(200, 100%, 65%, 0.12) 100%);
    border: 1px solid hsla(200, 100%, 70%, 0.25);
    box-shadow: 
      0 8px 32px hsla(220, 100%, 4%, 0.3),
      0 2px 8px hsla(200, 100%, 65%, 0.1),
      inset 0 1px 0 hsla(200, 100%, 85%, 0.15);
  }

  /* Unified Holo Panel System */
  .holo-panel {
    backdrop-filter: blur(20px) saturate(180%);
    background: linear-gradient(135deg,
      hsla(200, 100%, 65%, 0.15) 0%,
      hsla(190, 100%, 70%, 0.1) 50%,
      hsla(200, 100%, 65%, 0.15) 100%);
    border: 1px solid hsla(200, 100%, 70%, 0.3);
    box-shadow: 
      0 12px 40px hsla(220, 100%, 4%, 0.4),
      0 4px 16px hsla(200, 100%, 65%, 0.1),
      inset 0 1px 0 hsla(200, 100%, 85%, 0.2);
    position: relative;
  }

  /* Unified Cyber Border System */
  .cyber-border {
    border: 1px solid hsla(200, 100%, 70%, 0.3);
    position: relative;
  }
  
  .cyber-border::before {
    content: '';
    position: absolute;
    inset: -1px;
    background: linear-gradient(45deg,
      var(--spectrum-cyan) 0%,
      var(--spectrum-blue) 25%,
      var(--spectrum-violet) 50%,
      var(--spectrum-pink) 75%,
      var(--spectrum-cyan) 100%);
    border-radius: inherit;
    opacity: 0.6;
    z-index: -1;
    animation: cyber-pulse 4s ease-in-out infinite;
  }
  
  @keyframes cyber-pulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.8; }
  }

  /* Prismatic Glow Effects */
  .prismatic-glow {
    filter: drop-shadow(0 0 15px var(--spectrum-cyan))
            drop-shadow(0 0 25px var(--spectrum-blue))
            drop-shadow(0 0 35px var(--spectrum-violet));
  }
  
  /* Unified Gacha Shine System */
  .gacha-shine {
    position: relative;
    overflow: hidden;
  }
  
  .gacha-shine::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg,
      transparent 30%,
      hsla(200, 100%, 85%, 0.15) 50%,
      transparent 70%);
    animation: gacha-sweep 6s ease-in-out infinite;
    pointer-events: none;
  }
  
  @keyframes gacha-sweep {
    0% { transform: rotate(0deg) translate(-50%, -50%); opacity: 0; }
    50% { opacity: 1; }
    100% { transform: rotate(180deg) translate(-50%, -50%); opacity: 0; }
  }

  /* Cybernetic Grid Patterns */
  .cyber-grid {
    background-image: 
      linear-gradient(rgba(147, 197, 253, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(147, 197, 253, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }

  /* Energy Flow Animations */
  .energy-flow {
    position: relative;
    overflow: hidden;
  }

  .energy-flow::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg,
      transparent 0%,
      var(--spectrum-cyan) 50%,
      transparent 100%);
    animation: energy-pulse 2s ease-in-out infinite;
  }

  @keyframes energy-pulse {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  /* Holographic Text Effects */
  .holo-text {
    background: linear-gradient(45deg,
      var(--spectrum-cyan),
      var(--spectrum-blue),
      var(--spectrum-violet),
      var(--spectrum-pink));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: holo-shift 4s ease-in-out infinite;
  }

  @keyframes holo-shift {
    0%, 100% { filter: hue-rotate(0deg); }
    50% { filter: hue-rotate(180deg); }
  }

  /* Text Gradient Effects */
  .text-gradient-cyan {
    background: linear-gradient(45deg,
      var(--spectrum-cyan),
      var(--spectrum-blue),
      var(--spectrum-violet));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Quantum Particles */
  .quantum-particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--spectrum-cyan);
    border-radius: 50%;
    box-shadow: 0 0 10px var(--spectrum-cyan);
    animation: quantum-drift 6s linear infinite;
  }

  @keyframes quantum-drift {
    0% { transform: translateY(100vh) rotate(0deg); opacity: 0; }
    10% { opacity: 1; }
    90% { opacity: 1; }
    100% { transform: translateY(-100vh) rotate(360deg); opacity: 0; }
  }
  
  /* Unified Animation System */
  .fade-in-up {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .fade-in-up.animate {
    opacity: 1;
    transform: translateY(0);
  }
}

@layer utilities {
  .font-space {
    font-family: 'Space Grotesk', sans-serif;
  }
  
  .font-mono {
    font-family: 'JetBrains Mono', monospace;
  }
}